@model vidly01.Models.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Random
    
    @Model.Movie.Name</h2>
<h5>
    @if (Model.Customers.Count==0)
    {
        <p>No one has rent this movie.</p>
    }
    else
    {
        <ul>
        @foreach (var customer in Model.Customers)
         {
            <li>@customer.Name</li>
          }

        </ul>

    }
    
    </h5>

